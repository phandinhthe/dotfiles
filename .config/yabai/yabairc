#bsp, stack or float
yabai -m config layout bsp
yabai -m config active_window_opacity 0.5
yabai -m config normal_window_opacity 0
yabai -m config window_opacity 0

#Padding.
yabai -m config top_padding 30
yabai -m config right_padding 10
yabai -m config left_padding 10
yabai -m config bottom_padding 10
yabai -m config window_gap 10


#Focus window.


#Gap
yabai -m config window_gap 5

#Persist window size
yabai -m config window_zoom_persist true
#mouse setting
#yabai -m config mouse_follow_focus on
